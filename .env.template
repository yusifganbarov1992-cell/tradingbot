# Environment variables template
# Copy this file to .env and fill in your values

# ============================================
# BINANCE API KEYS
# ============================================
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ============================================
# SUPABASE DATABASE
# ============================================
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ============================================
# TELEGRAM NOTIFICATIONS
# ============================================
# Bot Token from @BotFather
TELEGRAM_TOKEN=your_telegram_bot_token_here
# Chat ID from @userinfobot
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# OPENAI API (Optional - for advanced AI)
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# TRADING CONFIGURATION
# ============================================
# Enable auto-trading (true/false)
AUTO_TRADE=false

# Initial capital in USDT
INITIAL_CAPITAL=10000

# Maximum number of concurrent positions
MAX_POSITIONS=3

# Risk per trade (0.01 = 1%, 0.02 = 2%)
RISK_PER_TRADE=0.02

# Maximum total portfolio risk (0.05 = 5%)
MAX_PORTFOLIO_RISK=0.05

# Stop loss percentage
STOP_LOSS_PCT=0.015

# Take profit percentage
TAKE_PROFIT_PCT=0.03

# ============================================
# AI SETTINGS
# ============================================
# Enable LSTM predictions
ENABLE_LSTM=true

# Enable pattern recognition
ENABLE_PATTERNS=true

# Enable sentiment analysis
ENABLE_SENTIMENT=true

# AI confidence threshold (0-1)
AI_CONFIDENCE_THRESHOLD=0.7

# ============================================
# MARKET FILTERS
# ============================================
# Minimum 24h volume in USDT
MIN_VOLUME=100000000

# Minimum liquidity score (1-10)
MIN_LIQUIDITY=5

# Maximum price volatility (0.1 = 10%)
MAX_VOLATILITY=0.15

# ============================================
# RISK MANAGEMENT
# ============================================
# Kelly Criterion multiplier (0.5 = half Kelly)
KELLY_MULTIPLIER=0.5

# Maximum drawdown before stopping (0.2 = 20%)
MAX_DRAWDOWN=0.20

# VaR confidence level (0.95 = 95%)
VAR_CONFIDENCE=0.95

# ============================================
# SCANNING SETTINGS
# ============================================
# Scan interval in seconds
SCAN_INTERVAL=300

# Number of pairs to scan
MAX_PAIRS_SCAN=50

# Minimum confidence for alert
MIN_ALERT_CONFIDENCE=0.75

# ============================================
# LOGGING
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log retention days
LOG_RETENTION_DAYS=30

# ============================================
# PERFORMANCE
# ============================================
# Number of worker threads
WORKER_THREADS=4

# API rate limit (requests per minute)
API_RATE_LIMIT=1200

# Cache TTL in seconds
CACHE_TTL=60
